{{!< default}}
<!-- home.hbs -->
{{#is "home"}}
<div class="flexy row main-header">
    {{#if @site.cover_image}}<figure class="flexy apply-full-cover" title="{{@site.title}}" style="{{#if @site.accent_color}}--cover-color: {{@site.accent_color}}; {{/if}}--cover-url: url({{img_url @site.cover_image}})">
        <img srcset="{{img_url @site.cover_image size='s'}} 300w, {{img_url @site.cover_image size='m'}} 600w, {{img_url @site.cover_image size='l'}} 1000w, {{img_url @site.cover_image size='xl'}} 2000w" sizes="(min-width: 1400px) 1400px, 92vw" src="{{img_url @site.cover_image size='xl'}}" alt="{{@site.title}}" loading="lazy" />
    </figure>{{/if}}
    <hgroup class="flexy">
        <h1 id="title" class="site-title">{{@site.title}}</h1>
        {{#if @site.description}}<h2 id="description" class="site-description">{{@site.description}}</h2>{{/if}}
        <p class="quote">Have a plumbing issue&quest; <strong>Call our 24hr emergency service&comma; 7 days a week&period;</strong></p>
        <a href="tel:+447773222722" title="Call us&excl;" target="_blank"><button type="button" class="btn btn-fill">{{> "icons/phone"}}<span>0777&dash;3222&dash;722</span></button></a>
    </hgroup>
</div>
{{> "who-we-are"}}
{{> "loop-services"}}
{{> "loop-areas"}}
{{> "loop-partners"}}
{{> "cta-signup"}}
{{> "loop-testimonials"}}
<section class="flexy loop">
    {{!-- Get all tags and order them by post count --}}
    <h3>Keywords</h3>
    <p class="quote">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Fugiat voluptas optio qui maiores amet, consequuntur rem aliquam corrupti suscipit eligendi, modi facilis ad officiis dolores vel dolorem quam quibusdam repudiandae!</p>
    <hr />
    {{#get "tags" limit="all" include="count.posts" order="count.posts desc"}}{{#foreach tags}}<a href="{{url}}" title="{{name}}" target="_top">{{name}} ({{count.posts}})</a>{{/foreach}}{{/get}}
</section>
{{> "footer"}}
{{#contentFor "scripts"}}<script type="text/javascript">
    // FitVids - Makes video embeds responsive
    $(document).ready(() => $(".gh-content").fitVids());
    console.log("Hello from home.hbs!");
</script>{{/contentFor}}
