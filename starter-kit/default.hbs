<!DOCTYPE html>
<!-- default.hbs -->
<html lang="{{@site.locale}}">
    <head>
        <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta http-equiv="cleartype" content="on" />
        <meta name="HandheldFriendly" content="True" />
        <meta name="MobileOptimized" content="320" />
        <meta name="viewport" content="user-scalable=yes, width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        {{!-- Preload scripts --}}
        <link rel="preload" as="script" href="{{asset "js/app.mjs"}}" />
        <link rel="preload" href="{{asset "css/screen.css"}}" type="text/css" as="style" />
        <link rel="preload" href="{{asset "css/media.css"}}" type="text/css" as="style" />
        <link rel="preconnect" href="https://cdn.jsdelivr.net/" crossorigin="anonymous" />
        <link rel="dns-prefetch" href="https://cdn.jsdelivr.net/" />
        <link rel="prefetch" href="https://cdn.jsdelivr.net/ghost/portal@~2.36/umd/portal.min.js" />
        <link rel="prefetch" href="https://cdn.jsdelivr.net/ghost/sodo-search@~1.1/umd/sodo-search.min.js" />
        <link rel="shortcut icon" href="{{asset 'favicon.ico'}}" />
        <link rel="stylesheet" href="{{asset 'css/screen.css' hasMinFile='true'}}" type="text/css" media="screen" />
        <link rel="stylesheet" href="{{asset 'css/media.css' hasMinFile='true'}}" type="text/css" media="screen" />
        <script type="importmap">
            {
                "imports": {
                    "view": "./assets/js/modules/view.mjs"
                }
            }
        </script>
        <script src="{{asset "js/application.mjs"}}" type="module"></script>
        <title>{{#is "home"}}{{@site.title}} &#8211; {{@site.description}}{{else is "page, post"}}{{meta_title}} &#8211; {{@site.title}}{{else}}{{meta_title}}{{/is}}</title>
        {{ghost_head}}
    </head>
    <body class="{{body_class}} flexy">
        {{> "header"}}
        <main id="site-main" class="site-main" role="main">
            {{{body}}}
        </main>
        {{> "cookies"}}
        {{> "footer"}}
        {{ghost_foot}}
    </body>
</html>