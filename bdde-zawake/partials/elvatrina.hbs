<header class="shelf-title"><span class="right arrows" title="{{t "Go right"}}">ðŸ‘‰</span><h2 title="{{t heading}}">{{t heading}}</h2><span class="left arrows" title="{{t "Go left"}}">ðŸ‘ˆ</span></header>
{{#get "posts" include="tags,authors" filter="primary_tag:{{section}}" limit="all" as |post|}}
<article class="shelf-content flex row nowrap align-content-center align-items-center">
    {{#foreach post}}
    <article class="shelf-item" aria-label="{{title}}" title="{{title}}">
        <figure class="item-figure" title="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"><img src="{{img_url feature_image}}" class="item-img" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" /></figure>
        <header class="item-title"><h3><a href="{{url}}" title="{{title}}" target="_self">{{title}}</a></h3></header>
        <div class="item-cta">{{> "item-button" item_price=tags.[1].slug}}</div>
        {{#if custom_excerpt}}<p class="item-text">&OpenCurlyDoubleQuote;{{custom_excerpt}}&CloseCurlyDoubleQuote;</p>{{/if}}
        {{#if featured}}<div>{{> "icons/fire"}}&nbsp;{{t "Featured"}}</div>{{/if}}
    </article>
    {{/foreach}}
</article>
{{else}}<p class="empty-shelves">{{#if error}}{{error}}{{/if}}{{t "Sorry, there are no products in this collection"}}</p>
{{/get}}