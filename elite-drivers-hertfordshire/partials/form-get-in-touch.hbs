<!-- partials/form-get-in-touch.hbs -->
<section class="flexy get-in-touch">
    <hgroup class="flexy form-heading">
        <h2>Get in touch&excl;</h2>
        <p class="flexy row">Morbi malesuada ligula sed nulla varius blandit&period;</p>
        {{> "form-validity"}}
    </hgroup>
    <form class="flexy" onsubmit="return validateForm();" action="." method="get" enctype="multipart/form-data" autocomplete="on" spellcheck="false" accept-charset="utf-8" rel="nofollow" target="_top">
        <fieldset class="flexy">
            <label for="category" title="Enquiry category" class="flexy"><span aria-label="required">*</span>Enquiry category<select name="category" id="category" class="flexy row" required="required" aria-required="true" autofocus="autofocus">
                <option value="" disabled="disabled" selected="selected" hidden="hidden" title="Please choose an option">Please choose an option</option>
                <option value="quote" title="Request a quote">Request a quote</option>
                <option value="cv" title="Send CV">Send CV</option>
                <option value="other" title="Other">Other</option>
            </select></label>
        </fieldset>
        <fieldset class="flexy">
            <legend class="flexy"><h3>Your details&colon;</h3></legend>
            <div class="flexy row">
                <label for="fname" title="First name" class="flexy"><span aria-label="required">*</span>First name<input type="text" name="fname" id="fname" placeholder="Your first name" autocomplete="given-name" required="required" aria-required="true" /></label>
                <label for="surname" title="Surname" class="flexy"><span aria-label="required">*</span>Surname<input type="text" name="surname" id="surname" placeholder="Your surname" autocomplete="family-name" required="required" aria-required="true" /></label>
            </div>
            <div class="flexy row">
                <label for="email" title="Email" class="flexy"><span aria-label="required">*</span>Email<input type="email" name="email" id="email" placeholder="Your email address" autocomplete="email" pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$" minlength="8" required="required" aria-required="true" /></label>
                <label for="phone" title="Phone" class="flexy">Phone<input type="tel" name="phone" id="phone" placeholder="Your phone number" autocomplete="tel" pattern="\d+" /></label>
            </div>
            <label for="enquiry" title="Enquiry" class="flexy"><span aria-label="required">*</span>Enquiry<textarea name="enquiry" id="enquiry" placeholder="Write something&hellip;" cols="60" rows="5" minlength="10" wrap="hard" required="required" aria-required="true"></textarea></label>
            <label for="file-upload" title="File upload" class="flexy row">File upload<input type="file" id="file-upload" name="filename" /></label>
        </fieldset>
        <fieldset class="flexy row">
            <legend class="flexy"><h3>Choose your favorite monster&colon;</h3></legend>
            <label for="kraken" class="flexy row" title="Kraken"><input type="radio" id="kraken" name="monster" value="K" />Kraken</label>
            <label for="sasquatch" class="flexy row" title="Sasquatch"><input type="radio" id="sasquatch" name="monster" value="S" />Sasquatch</label>
            <label for="mothman" class="flexy row" title="Mothman"><input type="radio" id="mothman" name="monster" value="M" />Mothman</label>
        </fieldset>
        <fieldset class="flexy row controls">
            <p class="flexy row required-fields" title="Required fields">Required fields</p>
            <div class="flexy">
                <label for="terms-conditions" class="flexy row" title="I have read and agreed with the terms &amp; conditions&period;"><span aria-label="required">*</span><input type="checkbox" id="terms-conditions" name="tandc" value="agree" required="required" aria-required="true" /><span>I have read and agreed with the <a href="/terms-and-conditions/" title="terms and conditions">terms &amp; conditions</a>&period;</span></label>
                <div class="flexy row">
                    <input type="submit" value="Send" title="Send" />
                    <input type="reset" value="Reset" title="Reset" />
                </div>
            </div>
        </fieldset>
    </form>
</section>