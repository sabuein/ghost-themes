<div class="flexy row nav-extra modal">
    <button type="button" data-html-symbol="trigram-for-heaven" title="Menu">&#9776; Menu</button>
    {{> "dialog-booking"}}
    <button type="button" title="Click to open the booking form">Book now&excl;</button>
    <output class="flexy"></output>
    {{#unless @site.members_enabled}}<button type="button" title="Search this site" class="search gh-icon-btn" aria-label="Search this site" data-ghost-search="">{{> "icons/search"}}</button>{{else}}<button type="button" title="Search this site" class="search gh-icon-btn" aria-label="Search this site" data-ghost-search="">{{> "icons/search"}}</button>
